<% if !flash.blank? %>
<%= render "flash"%>
<% end %>
<div id="email_sents">
	<div class="mail-list bg-white" id="inbox"> 
		<div class="p-15 b-b">
			<div class="d-flex align-items-center">
				<div>
					<h4>Mailbox </h4>
					<span>Here is the list of mail</span>
				</div>
				<div class="ml-auto">
					<input placeholder="Search Mail" id="" type="text" class="form-control">
				</div>
			</div>
		</div>
		<div class="bg-light p-15 d-flex align-items-center do-block">
			<div class="btn-group m-t-5 m-b-5">
				<div class="custom-control custom-checkbox">
					<input type="checkbox" class="custom-control-input sl-all" id="cstall">
					<label class="custom-control-label" for="cstall">Check All</label>
				</div>
			</div>
			<div class="ml-auto">
				<div class="btn-group m-r-10" role="group" aria-label="Button group with nested dropdown">
					<button type="button" class="btn btn-outline-secondary font-18"><i class="mdi mdi-reload"></i></button>
					<button type="button" class="btn btn-outline-secondary font-18" onclick="destroy(this);"><i class="mdi mdi-delete"></i></button>
				</div>
			</div>
		</div>
		<div class="table-responsive"  >
			<table class="table email-table no-wrap table-hover v-middle" >
				<tbody>
					<% if !@email_sents.blank?%>
					<% @email_sents.each do |sender|%>
					<tr <% if sender.status != true %> class="unread" <% end %>id="a">
						<!-- label -->
						<td class="chb">
							<div class="custom-control custom-checkbox">
								<input type="checkbox" class="custom-control-input" value="<%=sender.id%>"id="cst<%=sender.id%>">
								<label class="custom-control-label" for="cst<%=sender.id%>">&nbsp;</label>
							</div>
						</td>

						<!-- User -->
						<td class="user-image" onclick="myJsFunc(<%= sender.id%>);"><img src="<%= User.find_by_id(sender.sender_id).avatar%>" alt="user" class="rounded-circle" width="30"></td>
						<td class="user-name max-texts" onclick="myJsFunc(<%= sender.id%>);">
							<h6 class="m-b-0"><%= User.find_by_id(sender.sender_id).fullname%></h6>
						</td>
						<!-- Message -->
						<td class="max-texts" onclick="myJsFunc(<%= sender.id %>);"> <a class="link" data-remote="true"href="<%= communication_url(id: sender.id,status: "sent" ,page: params[:page]) %>" id="<%=sender.id %>" ><%= sender.subject[0..30] if !sender.subject.blank?%></a></td>
						<!-- Attachment -->
						<td class="clip" onclick="myJsFunc(<%= sender.id%>);"><i class="fa fa-paperclip"></i></td>
						<!-- Time -->
						<td class="time" onclick="myJsFunc(<%= sender.id%>);"> <%=sender.created_at.strftime('%a, %d %b %Y %H:%M:%S') %> </td>
					</tr>
					<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="p-15 m-t-30">
			<nav aria-label="Page navigation example">
				<% if !@email_sents.blank?%>
				<%= will_paginate(@email_sents, :params => { :controller => "communications", :action => "sents" },list_classes: %w(pagination justify-content-center) )%>

				<% end %>
			</nav>
		</div>
	</div>

	<script type="text/javascript">

		function myJsFunc(id){
			URL =$("#"+id+"").attr('href');
			$.ajax({
				url: URL,
				type: "GET",
			})
			return false;
		}
		$(document).ready(function() {
				$(".pagination").find("a").attr("data-remote", true);
			$("#unread-receive").text("<%= unread_receive().length %>");
			$("#unread-sent").text("<%= unread_sent().length %>");

		});
		function destroy(source){
			var checkboxes = document.querySelectorAll('input[type="checkbox"]');
			var ids = []
			for (var i = 0; i < checkboxes.length; i++) {
				if (checkboxes[i].id != "cstall"){
					if (checkboxes[i].checked ){
						if (checkboxes[i] != source)
						ids.push([parseInt(checkboxes[i].value)])
					}
				}
			}
			if (  ids.length > 0){
				$.ajax({
					url: "/communications/"+ids+"",
					type: "DELETE",
					data: {status: "sent"},
				})
			}
		}


		$(function() {
			"use strict";
			var mail = $('.email-table .max-texts a');

			$('.email-table').find('tr > td:first-child').find('input[type=checkbox]').on('change', function() {

				console.dir("-a--acheck")
				if ($(this).is(':checked')) {
					$(this).parents('tr').addClass('selected');
				} else {
					$(this).parents('tr').removeClass('selected');
				}
			});

			$(".sl-all").on('click', function() {
				$('.email-table input:checkbox').not(this).prop('checked', this.checked);
				if ($('.email-table input:checkbox').is(':checked')) {
					$('.email-table input:checkbox').parents('tr').addClass('selected');
				} else {
					$('.email-table input:checkbox').parents('tr').removeClass('selected');
				}
			});



		});
	</script>
</div>