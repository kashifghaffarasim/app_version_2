                                <button class="btn btn-info btn-rounded" id="spa">Spa Data</button> 
                                <% else %>
                                <a class="btn btn-info btn-rounded" href="<%= edit_spa_data_url(Pool.find_by_company_id(current_user.company_id).pool_datum.id)%>" data-remote="true">
