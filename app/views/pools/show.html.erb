                                <button class="btn btn-info btn-rounded" id="pool" >Pool Data</button>
                                
                                <% else %>
                                <a class="btn btn-info btn-rounded" href="<%= edit_pool_data_url(Pool.find_by_company_id(current_user.company_id).pool_datum.id)%>" data-remote="true">
                                Pool Data</a>
                                <% end %>
