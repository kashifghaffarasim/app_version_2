
<div class="row">
    <div class="col-sm-12 col-lg-12">
        <div class="form-group row">
            <label for="uname1" class="col-sm-3 text-right control-label col-form-label">Select Customer</label>
            <div class="col-sm-9">
                <%= select_tag('pool[user_id]', options_for_select(@customers.collect{|c| [c.fullname, c.id]}, selected: @pool.try(:user_id) ), :class => "form-control", :required => "") %>
            </div>
        </div>
    </div>
</div>


<h4 class="card-title">Pool Address</h4>
<div class="row">
    <div class="col-sm-12 col-lg-6">
        <div class="form-group row">
            <label for="uname1" class="col-sm-3 text-right control-label col-form-label">Address</label>
            <div class="col-sm-9">
                <input  class="form-control" 
                        type="text" name="address[address_name]"  placeholder="Address" required="" value="<%= @pool.address.try(:address_name)%>">
            </div>
        </div>
    </div>

    <div class="col-sm-12 col-lg-6">
        <div class="form-group row">
            <label for="nname" class="col-sm-3 text-right control-label col-form-label"  >City</label>
            <div class="col-sm-9">
                <input  class="form-control" 
                        type="text" name="address[city_name]"  placeholder="City" required="" value="<%= @pool.address.try(:city_name)%>">
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 col-lg-6">
        <div class="form-group row">
            <label for="uname1" class="col-sm-3 text-right control-label col-form-label">State</label>
            <div class="col-sm-9">
                <input  class="form-control"
                        type="text" name="address[state_name]" placeholder="State" required="" value="<%= @pool.address.try(:state_name)%>">
            </div>
        </div>
    </div>

    <div class="col-sm-12 col-lg-6">

        <div class="form-group row">
            <label for="uname1" class="col-sm-3 text-right control-label col-form-label">Zip Code</label>
            <div class="col-sm-9">
                <input  class="form-control" type="text"  placeholder="Zip Code" 
                        name="address[zipcode]" required="true" value="<%= @pool.address.try(:zipcode)%>">
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 col-lg-6">
        <div class="form-group row">
            <label for="nname" class="col-sm-3 text-right control-label col-form-label">Country</label>
            <div class="col-sm-9">
                <input  class="form-control" type="text"  placeholder="Country"  name="address[country_name]" required="" value="<%= @pool.address.try(:country_name)%>">
            </div>
        </div>
    </div>
    <input  class="form-control form-control-line" type="hidden" name="pool[company_id]" value="<%= current_user.company_id%>">
</div>