<div class="card-body" style="padding-bottom: 50px ">
  <div class="form-wrapper"> 
    <h4 class="card-title">Edit Market Sources </h4>
    <%= form_tag settings_pool_settings_url,:class=>"edit_work_configuration compressed_form" do %>
    <div class="form-group row" id="popover_form_content">
      <label id="popover_left" for="expense_cost" class="col-sm-3 text-right control-label col-form-label">Market Source</label>
      <div class="col-sm-7"  id="popover_left">
        <%= text_field_tag "pool_setting[name]", nil, :class => "form-control", autofocus: "autofocus" ,:required=>true,:placeholder=>"market source"%>
      </div>
    </div>

    <div  align="right" style="margin-top: -4.6%;
    width: 89%;">
    <%= button_tag "save",:class=>"btn btn-info waves-effect waves-light"%>	
  </div>
  <%end%>

