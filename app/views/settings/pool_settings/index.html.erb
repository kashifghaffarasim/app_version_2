<%if !@pool_settings.blank? %>
<hr>
<div class="card-body" >
  <div class="form-wrapper"> 
    <h4 class="card-title">Edit Market Sources</h4>
    <% @pool_settings.each_with_index do |source,index|%>

    <div class="form-group row" id="popover_left">
      <label for="com1" class="col-sm-3 text-right control-label col-form-label">Market Source</label>
      <div class="col-sm-7" id="popover_left">
        <p class="form-control"><%= index + 1 %>. &nbsp;&nbsp;<%= source.name%>
        </p>
      </div>
      <div  align="right" id="popover_left">
        <%= link_to "Edit",edit_settings_pool_setting_url(source), class: "btn btn-info waves-effect waves-light", style: "line-height: 1.5; margin-right: 10px;" %>
        <%= link_to "Delete",settings_pool_setting_url(source), method: :delete, class: "btn btn-info waves-effect waves-light", :data => {:confirm => 'Are you sure?'}%>
      </div>
    </div>
    <%end%>
  </div>
</div>
<%end%>



