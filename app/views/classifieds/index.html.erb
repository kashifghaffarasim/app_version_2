<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title"> Classified </h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Classified</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">

        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">
                        <div class="col-md-12 text-right">
                            <%= link_to 'New Classified', new_classified_path ,:class=>"btn btn-info btn-rounded",:style=>"float:right;"%>
                        </div>
                    </div>
                    
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="demo-foo-addrow" class="table m-t-30 no-wrap table-hover contact-list" data-page-size="10">
                                <thead>
                                    <tr>
                                        <th>Status</th>
                                        <th>Manage</th>
                                        <th>Posting title</th>
                                        <th>Area & Category</th>
                                        <th>Posted Date</th>
                                        <th colspan="3"  style="text-align: center!important;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @classifieds.each do |classified| %>
                                      <tr>
                                          <td>Draft</td>
                                          <td><%=link_to "Repost","http://www.craigslist.org",target: "_blank"%></td>
                                          <td><%= classified.posting_title %></td>
                                          <td><%= classified.specific_location %></td>
                                          <td><%= classified.created_at.strftime("%Y-%m-%d %r")%></td>
                                          <td><%= link_to 'Preview', classified %></td>
                                          <td><%= link_to 'Edit', edit_classified_path(classified) %></td>
                                          <td><%= link_to 'Delete', classified, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
                                      </tr>
                                    <% end %>
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

