<header class="topbar">
    <nav class="navbar top-navbar navbar-expand-md navbar-dark">
        <div class="navbar-header">
            <!-- This is for the sidebar toggle which is visible on mobile only -->
            <a class="nav-toggler waves-effect waves-light d-block d-md-none" href="javascript:void(0)"><i class="ti-menu ti-close"></i></a>
            <a class="navbar-brand" href="<%= admin_admin_index_url %>" >
                <!-- Logo icon -->
                <b class="logo-icon">
                    <img src="/assets/logo-icon.png" 
                    alt="homepage" class="dark-logo" />
                    <img src="/assets/logo-light-icon.png"
                    alt="homepage" class="light-logo" />
                </b>
                <span class="logo-text">
                    <img src="/assets/logo-text.png" alt="homepage" class="dark-logo" />
                    <img src="/assets/logo-light-text.png" class="light-logo" alt="homepage" />
                </span>
            </a>
            <a class="topbartoggler d-block d-md-none waves-effect waves-light" href="javascript:void(0)" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><i class="ti-more"></i></a>
        </div>
        
        
        <!-- ============================================================== -->
        <!-- End Logo -->
        <!-- ============================================================== -->
        <div class="navbar-collapse collapse" id="navbarSupportedContent">

            <ul class="navbar-nav float-right" style="    margin-left: 98%;">

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-muted waves-effect waves-dark pro-pic" href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                     <% if user_signed_in? %>  
                     <img src="<%= current_user.avatar%>" alt="user" class="rounded-circle" width="31">
                     <% else %>

                     <img src="/assets/users/1.jpg" alt="user" class="rounded-circle" width="31"><% end %></a>
                     <div class="dropdown-menu dropdown-menu-right user-dd animated flipInY">
                        <span class="with-arrow"><span class="bg-primary"></span></span>
                        <div class="d-flex no-block align-items-center p-15 bg-primary text-white m-b-10">
                            <div class="m-l-10" style="padding: 20px; text-align: center; padding-top: 25px">
                                <h4 class="m-b-0">
                                   <% if user_signed_in? %>  
                                   <%= current_user.fullname %>
                                   <% else %>
                                   Guest
                                   <% end %>
                               </h4>
                           </div>
                       </div>
                       <% if user_signed_in? %>


                       <div class="dropdown-divider"></div>
                       <%= link_to profiles_url,:method=>:get ,:class => "dropdown-item" do %>
                       <i class="fa fa-user m-r-5 m-l-5"></i> Profile
                       <% end %>

                       <%= link_to signout_users_url,:method=>:get ,:class => "dropdown-item" do %>
                       <i class="fa fa-power-off m-r-5 m-l-5"></i> Logout
                       <% end %>
                       <% else %>
                       <li><%= link_to "Login",signin_users_url %></li>
                       <li><%= link_to "Signup",new_user_url %></li>
                       <% end %>  

                   </div>
               </li>
               <!-- ============================================================== -->
               <!-- User profile and search -->
               <!-- ============================================================== -->
           </ul>
       </div>
   </nav>
