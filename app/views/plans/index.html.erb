<div class="page-wrapper">   
  <!-- ============================================================== -->
  <!-- Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-5 align-self-center">
        <h4 class="page-title">Pricing Page</h4>
        <div class="d-flex align-items-center">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">Library</li>
            </ol>
          </nav>
        </div>
      </div>
      <div class="col-7 align-self-center">
        <div class="d-flex no-block justify-content-end align-items-center">
          <div class="m-r-10">
            <div class="lastmonth"></div>
          </div>
          <div class=""><small>LAST MONTH</small>
            <h4 class="text-info m-b-0 font-medium">$58,256</h4></div>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid">

      <div class="row">
        <div class="col-12" >
          <div class="card">
            <div class="card-body">
              <h2 class="title" style="text-align: center;">15 day FREE trial with all plans!</h2>
              <p class="intro" style="text-align: center;">CopperService's pricing is simple and you can change your plan at any time. </p> 

              <% flash.each do |key, value| %>
              <div class="alert alert-<%= key %>"><%= value %></div>
              <% end %>
              <div class="card-group" id="price-plan">
                <div class="card m-t-30 border-top border-left ">
                  <%= form_tag plans_url do %>
                  <div class="p-15 text-center ">
                    <h4 class="card-title m-t-10">SOLO</h4>
                    <h2 class="display-5 position-relative m-t-20 m-b-10">
                      <span class="price-sign">$</span>19.95
                    </h2>
                    <p>Per Month</p>
                  </div>
                  <div class="border-top">
                    <ul class="list-style-none text-center">
                      <li class="border-bottom p-20">
                        <i class="ti-user m-r-5"></i>1 user
                      </li>
                      <li class="border-bottom p-20">
                        <i class="ti-mobile m-r-5"></i>Client Unlimited
                      </li>
                      <li class="border-bottom p-20">
                        <i class="ti-server m-r-5"></i>Email Notification yes
                      </li>
                      <li class="border-bottom p-20">
                        <i class="ti-reload m-r-5"></i>10 Gb
                      </li>


                      <li class="border-bottom p-20">

                        <input name="plan[plan_name]" type="hidden" value="solo">
                        <%if current_user.plan_id.blank?%>
                        <%= button_tag :class=>"btn btn-success btn-cta-primary heading1" do %>Choose Plan<br/>
                        <span class="extra">30 day free trial</span>
                        <%end%>
                        <%elsif @plan.plan_name == "solo"%>
                        <%= button_tag :class=>"btn btn-success btn-cta-primary heading1" ,:disabled => true do %>Selected Plan<br/>
                        <span class="extra">30 day free trial</span>
                        <%end%>
                        <%else%>  
                        <%= button_tag :class=>"btn btn-success btn-cta-primary heading1" do %>Down Grade Plan<br/>
                        <span class="extra">30 day free trial</span>
                        <%end%>
                        <%end%>
                      </li>
                    </ul>

                  </div>
                  <%  end %> 
                </div>
                <div class="card m-t-30 border-top border-left ">
                  <%= form_tag plans_url  do %> 

                  <div class="card border-top m-t-30" >
                    <h5 class="price-label text-white text-center bg-info " style="    left:73%;">POPULAR</h5>
                    <div class="p-15 text-center ">
                      <h4 class="card-title m-t-10 text-center">TEAM</h4>
                      <h2 class="display-5 position-relative m-t-20 m-b-10">
                        <span class="price-sign">$</span>29.95
                      </h2>
                      <p>Per Month</p>
                    </div>
                    <div class="border-top">
                      <ul class="list-style-none text-center">
                        <li class="border-bottom p-20">
                          <i class="ti-user m-r-5"></i>5 users
                        </li>
                        <li class="border-bottom p-20">
                          <i class="ti-mobile m-r-5"></i>Client Unlimited
                        </li>
                        <li class="border-bottom p-20">
                          <i class="ti-server m-r-5"></i>Email Notification yes
                        </li>
                        <li class="border-bottom p-20">
                          <i class="ti-reload m-r-5"></i>25 Gb
                        </li>

                        <li class="border-bottom p-20">

                          <input name="plan[plan_name]" type="hidden" value="team">

                          <%if current_user.plan_id.blank?%>
                          <%= button_tag :class=>"btn btn-success btn-cta-primary heading2" do %>Choose Plan<br/>
                          <span class="extra">30 day free trial</span>
                          <%end%>
                          <%elsif @plan.plan_name=="team"%>
                          <%= button_tag :class=>"btn btn-success btn-cta-primary heading2", :disabled => true do %>Selected Plan<br/>
                          <span class="extra">30 day free trial</span>
                          <%end%>
                          <%elsif @plan.plan_name=="solo"%>
                          <%= button_tag :class=>"btn btn-success btn-cta-primary heading2" do %>Upgrade Plan<br/>
                          <span class="extra">30 day free trial</span>
                          <%end%>
                          <%elsif @plan.plan_name=="business"%>  
                          <%= button_tag :class=>"btn btn-success btn-cta-primary heading2" do %>Down Grade Plan<br/>
                          <span class="extra">30 day free trial</span>
                          <%end%>
                          <%end%>


                        </li>
                      </ul>
                    </div>
                  </div>
                  <%end%> 
                </div>
                <div class="card bg-light border-top border-left ">
                  <%= form_tag plans_url   do %> 

                  <div class="p-15 text-center">
                    <h4 class="card-title m-t-40 text-center">BUSINESS</h4>
                    <h2 class="display-5 position-relative m-t-20 m-b-10">
                      <span class="price-sign">$</span>49.95
                    </h2>
                    <p>Per Month</p>
                  </div>
                  <div class="border-top">
                    <ul class="list-style-none text-center">
                      <li class="border-bottom p-20">
                        <i class="ti-user m-r-5"></i>20 Each additional user $2
                      </li>
                      <li class="border-bottom p-20">
                        <i class="ti-mobile m-r-5"></i>Client Unlimited
                      </li>
                      <li class="border-bottom p-20">
                        <i class="ti-server m-r-5"></i>Email Notification yes
                      </li>
                      <li class="border-bottom p-20">
                        <i class="ti-reload m-r-5"></i>100 Gb
                      </li>


                      <li class="border-bottom p-20">
                        <input name="plan[plan_name]" type="hidden" value="business">

                        <%if current_user.plan_id.blank?%>
                        <%= button_tag :class=>"btn btn-info btn-cta-primary heading3" do %>Choose Plan<br/>
                        <span class="extra">30 day free trial</span>
                        <%end%>
                        <%elsif @plan.plan_name =="business"%>
                        <%= button_tag :class=>"btn btn-info btn-cta-primary heading3" ,:disabled => true do %>Selected Plan<br/>
                        <span class="extra">30 day free trial</span>
                        <%end%>
                        <%elsif @plan.plan_name =="team"%>
                        <%= button_tag :class=>"btn btn-info btn-cta-primary heading3" do %>Upgrade Plan<br/>
                        <span class="extra">30 day free trial</span>
                        <%end%>
                        <%elsif @plan.plan_name =="solo"%>  
                        <%= button_tag :class=>"btn btn-info btn-cta-primary heading3" do %>Upgrade Plan<br/>
                        <span class="extra">30 day free trial</span>
                        <%end%>
                        <%end%>
                      </li>
                    </ul>
                  </div>
                  <% end %>
                </div>

              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>










